    xmlns:viewmodel="clr-namespace:CoolWeather.ViewModels">
    <ContentPage.Content>
        <StackLayout>
         <ActivityIndicator IsRunning="{Binding IsBusy}" IsVisible="{Binding IsBusy}" HeightRequest="40" WidthRequest="40" Color ="Red" VerticalOptions="Start" HorizontalOptions="Center"/>
            <CollectionView ItemsSource="{Binding Cities}">

                <CollectionView.ItemsLayout>
                    <LinearItemsLayout
