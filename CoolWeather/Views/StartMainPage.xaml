                <CollectionView.ItemTemplate>
                    <DataTemplate>

                        <pancake:PancakeView
                            Padding="10"
                            WidthRequest="120"
                            HeightRequest="120"
                            BackgroundGradientAngle="15"
                            BackgroundGradientEndColor="#83a4d4"
                            BackgroundGradientStartColor="#b6fbff"
                            BorderColor="AliceBlue"
                            BorderIsDashed="True"
                            CornerRadius="0,80,80,0"
                            HasShadow="True"
                            VerticalOptions="CenterAndExpand">
                            <StackLayout Orientation="Horizontal" Spacing="50">
                                <Image
                                    Source="DefaultWeather.png"
                                    HorizontalOptions="Center"
                                    VerticalOptions="CenterAndExpand"></Image>
                                <Label
                                    FontAttributes="Bold"
                                    FontSize="Large"
                                    Text="{Binding Name}"
                                    TextColor="White"
                                    HorizontalOptions="Center"
                                    VerticalOptions="CenterAndExpand" />
                            </StackLayout>
                        </pancake:PancakeView>

